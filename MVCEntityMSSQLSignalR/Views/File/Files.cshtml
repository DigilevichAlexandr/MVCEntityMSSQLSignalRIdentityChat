@model IEnumerable<MVCEntityMSSQLSignalR.Models.FileViewModel>
@{
    ViewData["Title"] = "Add file";
}
<h3>Choose file to upload</h3>
<form asp-action="AddFile" asp-controller="File" method="post" enctype="multipart/form-data">
    <input type="file" name="uploadedFile" style="margin-bottom: 10px;"/><br>
    <input type="submit" value="Upload" tyle="margin-bottom: 5px;" />
</form>

<h3>All files</h3>
@foreach (var f in Model)
{
    <p>@f.Name</p>
    <p><img src="@Url.Content(f.Path)"></p>
}